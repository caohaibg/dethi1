<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sie.ocho.MainActivity"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000"
        android:text="THÔNG TIN THÍ SINH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="20sp" />

            <EditText
                android:layout_marginLeft="50dp"
                android:id="@+id/editten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10">

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:layout_marginLeft="50dp"
                android:id="@+id/editNS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="20sp" />

            <EditText
                android:layout_marginLeft="50dp"
                android:id="@+id/editDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính:"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_marginLeft="50dp"
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Nữ"
                    android:textSize="20sp" />

                <RadioButton
                    android:layout_marginLeft="-60dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/radNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"

                    android:textSize="20sp" />
            </RadioGroup>
        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trường yêu thích"
        android:textColor="#000"
        android:textSize="30sp"/>



    <CheckBox

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/chkitem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dh kinh tế"
        android:textSize="20sp"/>


    <CheckBox
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/chkitem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dh công nghiệp"
        android:textSize="20sp"/>

    <CheckBox

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/chkitem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dh sư phạm"
        android:textSize="20sp"/>
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnAdd"
            android:text="Lưu giữ liệu"
            android:textSize="20sp"
            android:layout_width="190dp"

            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnhienthi"
            android:text="Hiển Thị"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </TableRow>

</LinearLayout>
